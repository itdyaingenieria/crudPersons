@model Prueba_YamaAndrade.Models.Persona

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Crear Nueva Persona</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h2>Nueva Persona</h2>
                <form id="personaForm" method="post" asp-action="Nuevo" asp-controller="Persona">

                    <div class="mb-3">
                        <label for="Nombres" class="form-label">Nombres</label>
                        <input type="text" class="form-control" asp-for="Nombres" placeholder="Ingrese los nombres" required>
                    </div>
                    <div class="mb-3">
                        <label for="Apellidos" class="form-label">Apellidos</label>
                        <input type="text" class="form-control" asp-for="Apellidos" placeholder="Ingrese los apellidos" required>
                    </div>
                    <div class="mb-3">
                        <label for="Identificacion" class="form-label">Identificación</label>
                        <input type="text" class="form-control" asp-for="Identificacion" placeholder="Ingrese la identificación" maxlength="10" required>
                    </div>
                    <div class="mb-3">
                        <label for="Genero" class="form-label">Género</label>
                        <select class="form-control" asp-for="Genero" required>
                            <option value="">Seleccione</option>
                            <option value="M">Masculino</option>
                            <option value="F">Femenino</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="Fecha_nacimiento" class="form-label">Fecha de Nacimiento</label>
                        <input type="date" class="form-control" asp-for="Fecha_nacimiento" required>
                    </div>
                    <div class="mb-3">
                        <label for="Contrasena" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" asp-for="Contrasena" placeholder="Ingrese la contraseña" minlength="6" maxlength="10" required>
                    </div>
                    <div class="mb-3">
                        <label for="Activo" class="form-label">Activo</label>
                        <select class="form-control" asp-for="Activo" required>
                            <option value="">Seleccione</option>
                            <option value="true">Sí</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a class="btn btn-secondary" href="@Url.Action("Listar", "Persona")">Cancelar</a>
                </form>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Validaciones personalizadas con jQuery
            $("#personaForm").on("submit", function () {
                let valid = true;

                // Validar Nombres
                if ($("#Nombres").val().trim() === "") {
                    alert("El campo Nombres es obligatorio.");
                    valid = false;
                }

                // Validar Apellidos
                if ($("#Apellidos").val().trim() === "") {
                    alert("El campo Apellidos es obligatorio.");
                    valid = false;
                }

                // Validar Identificación
                if ($("#Identificacion").val().length !== 10) {
                    alert("La Identificación debe tener 10 caracteres.");
                    valid = false;
                }

                // Validar Género
                if ($("#Genero").val() === "") {
                    alert("Debe seleccionar un Género.");
                    valid = false;
                }

                // Validar Contraseña
                if ($("#Contrasena").val().length < 6 || $("#Contrasena").val().length > 10) {
                    alert("La contraseña debe tener entre 6 y 10 caracteres.");
                    valid = false;
                }

                return valid; // Solo se envía si es válido
            });
        });
    </script>
</body>
</html>
